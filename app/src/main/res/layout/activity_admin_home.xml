<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminHomeActivity">
   <Button
       android:id="@+id/logout"
       android:layout_width="wrap_content"
       android:layout_height="25dp"
       android:layout_alignParentEnd="true"
       android:layout_marginTop="15dp"
       android:layout_marginEnd="8dp"
       android:background="@drawable/custome_button_login"
       android:text="logout"/>
   <FrameLayout
       android:id="@+id/atas"
       android:layout_width="match_parent"
       android:layout_height="300dp"
       android:background="@color/colorPrimary">
       <ImageView
           android:layout_width="120dp"
           android:layout_height="120dp"
           android:layout_gravity="center"
           android:src="@drawable/logo"/>
   </FrameLayout>
   <FrameLayout
       android:layout_width="match_parent"
       android:layout_height="3dp"
       android:layout_marginTop="300dp"
       android:background="#ff9f1c"/>
<ScrollView
    android:layout_marginTop="280dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="7dp"
          android:orientation="horizontal">
         <android.support.v7.widget.CardView
             android:layout_width="match_parent"
             android:layout_height="140dp"
             android:layout_weight="1"
             android:layout_marginEnd="4dp"
             android:layout_marginBottom="4dp"
             app:cardCornerRadius="4dp"
             app:cardElevation="3dp"
             android:onClick="siswa">
            <ImageView
                android:id="@+id/fotosiswa"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/siswa"
                android:layout_gravity="center|top"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="100dp"
                android:background="#ff9f1c"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="4dp"
                android:text="Siswa"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#000"/>
         </android.support.v7.widget.CardView>
         <android.support.v7.widget.CardView
             android:layout_width="match_parent"
             android:layout_height="140dp"
             android:layout_weight="1"
             android:layout_marginStart="4dp"
             android:layout_marginBottom="4dp"
             app:cardCornerRadius="4dp"
             app:cardElevation="3dp"
             android:onClick="jadwal">
            <ImageView
                android:id="@+id/fotojadwal"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/jadwal"
                android:layout_gravity="center|top"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="100dp"
                android:background="#ff9f1c"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="4dp"
                android:text="Jadwal"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#000"/>
         </android.support.v7.widget.CardView>
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="7dp"
          android:orientation="horizontal">
         <android.support.v7.widget.CardView
             android:layout_width="match_parent"
             android:layout_height="140dp"
             android:layout_weight="1"
             android:layout_marginEnd="4dp"
             android:layout_marginBottom="4dp"
             app:cardCornerRadius="4dp"
             app:cardElevation="3dp"
             android:onClick="loker">
            <ImageView
                android:id="@+id/fotoloker"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/loker"
                android:layout_gravity="center|top"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="100dp"
                android:background="#ff9f1c"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="4dp"
                android:text="Lowongan kerja"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#000"/>
         </android.support.v7.widget.CardView>
         <android.support.v7.widget.CardView
             android:layout_width="match_parent"
             android:layout_height="140dp"
             android:layout_weight="1"
             android:layout_marginStart="4dp"
             android:layout_marginBottom="4dp"
             app:cardCornerRadius="4dp"
             app:cardElevation="3dp"
             android:onClick="pengumuman">
            <ImageView
                android:id="@+id/fotopengumuman"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/pengumuman"
                android:layout_gravity="center|top"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="100dp"
                android:background="#ff9f1c"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="4dp"
                android:text="Pengumuman"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#000"/>
         </android.support.v7.widget.CardView>
      </LinearLayout>

   </LinearLayout>
</ScrollView>
</RelativeLayout>