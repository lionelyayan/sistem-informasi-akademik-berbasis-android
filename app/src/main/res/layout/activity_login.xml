<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".LoginActivity">

    <LinearLayout
        android:id="@+id/form"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:background="@drawable/login"
        android:layout_marginTop="160dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:paddingRight="30dp"
        android:paddingLeft="30dp">
        <EditText
            android:id="@+id/email"
            android:layout_marginTop="110dp"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:background="@drawable/custome_edit_text"
            android:drawableStart="@drawable/icon_username"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textSize="18sp"
            android:textColor="#000"/>
        <EditText
            android:id="@+id/password"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:background="@drawable/custome_edit_text"
            android:drawableStart="@drawable/icon_password"
            android:hint="Password"
            android:inputType="textPassword"
            android:textSize="18sp"
            android:textColor="#000"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btnlogin"
                android:layout_width="match_parent"
                android:layout_height="35sp"
                android:background="@drawable/custome_button_login"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="45dp"
                android:text="L  o  g  i  n"
                android:textColor="#011627"
                android:textStyle="bold"
                android:textSize="20sp"/>
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:layout_marginTop="100dp"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_below="@+id/form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Silahkan hubungi admin \n untuk mendapatkan akses login" />

</RelativeLayout>