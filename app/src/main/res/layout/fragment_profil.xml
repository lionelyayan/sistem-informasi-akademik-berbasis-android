<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentDrawer.ProfilFragment">
    <FrameLayout
        android:id="@+id/atas"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@color/colorPrimary"/>
    <FrameLayout
        android:layout_below="@+id/atas"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#ff9f1c"/>
    <FrameLayout
        android:layout_below="@+id/atas"
        android:layout_marginTop="39dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="16dp"
                app:civ_border="true"
                app:civ_border_color="#fff"
                android:src="@drawable/lk"
                android:id="@+id/fotoprofil"
                android:layout_gravity="center"/>
            <Button
                android:id="@+id/foto"
                android:text="Ganti foto"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:background="@drawable/custome_button_login"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="20sp" />
            <Button
                android:id="@+id/gantifoto"
                android:text="Klik untuk ganti foto"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:background="@drawable/custome_button_login"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="20sp" />

            <TextView
                android:id="@+id/nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:text="Supriyandi Ridzkia"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="8dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Kelas"
                            android:textStyle="bold"
                            android:textColor="#ff9f1c"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:gravity="center"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="NISN"
                            android:textStyle="bold"
                            android:textColor="#ff9f1c"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:gravity="center"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Jurusan"
                            android:textStyle="bold"
                            android:textColor="#ff9f1c"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:gravity="center"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/kelas"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="#000"
                            android:gravity="center"/>
                        <TextView
                            android:id="@+id/nisn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="#000"
                            android:gravity="center"/>
                        <TextView
                            android:id="@+id/jurusan"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="#000"
                            android:gravity="center"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/alamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:drawableStart="@drawable/icon_location"
                    android:gravity="center_vertical"
                    android:textColor="#000"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                <TextView
                    android:id="@+id/lahir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:drawableStart="@drawable/icon_date"
                    android:gravity="center_vertical"
                    android:textColor="#000"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                <TextView
                    android:id="@+id/kelamin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:drawableStart="@drawable/icon_gender"
                    android:gravity="center_vertical"
                    android:textColor="#000"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                <TextView
                    android:id="@+id/notelp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:drawableStart="@drawable/icon_phone"
                    android:gravity="center_vertical"
                    android:textColor="#000"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                <TextView
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:drawableStart="@drawable/icon_email"
                    android:gravity="center_vertical"
                    android:textColor="#000"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>